<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/drawer_layout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width = "fill_parent"
        android:layout_height = "fill_parent"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_main"
            android:layout_height="?actionBarSize"
            android:layout_width="fill_parent"
            android:background="@color/ColorPrimary"
            android:elevation="2dp"
            android:layout_marginLeft="-16.0dip"
            android:theme="@style/ActionBarThemeOverlay"
            android:popupTheme="@style/ActionBarPopupThemeOverlay"
            xmlns:android="http://schemas.android.com/apk/res/android" >
            <com.example.cheongwh.queuing.SlidingTabLayout
                android:id="@+id/tabs"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center|bottom|left"
                android:background="#FFFFFF"/>

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">
                <ImageView
                    android:id="@+id/text1"
                    android:layout_gravity="center|bottom"
                    android:layout_width="19dp"
                    android:layout_height="fill_parent"
                    android:adjustViewBounds="true"
                    android:maxWidth="10dp"
                    android:maxHeight="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_tab_filter"
                    android:text="TEXT"
                    android:textSize="10dp"/>
            </FrameLayout>

            <FrameLayout
                android:layout_marginRight="5dp"
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">
                <ImageView
                    android:id="@+id/text2"
                    android:layout_toLeftOf="@id/text1"
                    android:layout_gravity="center|bottom"
                    android:layout_width="19dp"
                    android:adjustViewBounds="true"
                    android:maxWidth="10dp"
                    android:maxHeight="10dp"
                    android:scaleType="fitCenter"
                    android:layout_height="fill_parent"
                    android:src="@drawable/ic_tab_map"
                    android:text="TEXT"
                    android:textSize="10dp"/>
            </FrameLayout>

        </android.support.v7.widget.Toolbar>
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                ></android.support.v4.view.ViewPager>
        </FrameLayout>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/rDrawer"
        android:layout_gravity= "end"
        android:layout_width= "270.0dip"
        android:layout_height="fill_parent"
        android:background="#123145">

    </FrameLayout>
</android.support.v4.widget.DrawerLayout>