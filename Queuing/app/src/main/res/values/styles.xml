<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorPrimaryDark">#BDBDBD</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
    <style name="ActionBarThemeOverlay">
        <item name="android:textColorPrimary">#03A9F4</item>
        <item name="colorControlNormal">#03A9F4</item>
        <item name="colorControlHighlight">#81D4FA</item>
    </style>


    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:background">#03A9F4</item>
        <item name="android:textColor">#fff</item>
    </style>
</resources>
